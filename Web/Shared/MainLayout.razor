@inherits LayoutComponentBase


<MudThemeProvider Theme="CustomTheme" />
<MudDialogProvider />
<MudSnackbarProvider />

<div>
<MudLayout>
    <MudAppBar Elevation="0" Color=Color.Primary>
        
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        <MudSpacer />
        <MudIconButton Icon="@Icons.Custom.Brands.MudBlazor" Link="https://mudblazor.com/" Target="_blank" />
        <MudIconButton Icon="@Icons.Custom.Brands.GitHub" Link="https://github.com/MudBlazor/MudBlazor/" Target="_blank" />
    </MudAppBar>
    <MudDrawer @bind-Open="_drawerOpen" Elevation="1">
        <MudDrawerHeader>
            <MudText Typo="Typo.h6">MudBazorTry</MudText>
        </MudDrawerHeader>
        <NavMenu />
    </MudDrawer>
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.Medium" Class="my-16 pt-16">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>
</div>

@code {
    bool _drawerOpen = true;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }

    MudTheme CustomTheme = new MudTheme()
    {
        Palette = new Palette()
        {
            Primary = "#f4e7e1",
            PrimaryContrastText = "#272c34ff",
            TextPrimary = "#272c34ff",
            PrimaryLighten = "rgb(255,255,255)",
            PrimaryDarken = "rgb(193,181,175)",


            Secondary = new MudBlazor.Utilities.MudColor("#cbc5f0"),
            SecondaryContrastText = new MudBlazor.Utilities.MudColor("#272c34ff"),
            TextSecondary = new MudBlazor.Utilities.MudColor("#272c34ff"),
            SecondaryLighten = "rgb(254,248,255)",
            SecondaryDarken = "rgb(154,149,189)",

            
        },
    };
}
